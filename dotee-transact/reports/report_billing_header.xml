<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout_billing_header_inherit_cr">
    
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <div class="header">
          
        </div>
        
        <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
          <t t-raw="0"/>
        </div>
        <div class="footer">
            <div class="row">
                <div class="col-8">
                    <span class="text-left" t-field="o.partner_id"/>
                    <!-- <span class="text-right" t-field="o.x_studio_property_code"/> -->
                </div>
                <div class="col-4">
                    <span t-field="o.amount_total"/><br />
                    <span class="text-right">April 2020 - May 2020</span>
                </div>
            </div>
        </div>
    </template>
</odoo>